<launch>
    <arg name="ns"      default="robot_0" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" ns="$(arg ns)" output="screen">
        <rosparam file="$(find planning)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find planning)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
        
        <rosparam file="$(find planning)/param/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find planning)/param/local_costmap_params.yaml"  command="load" />
        
        <rosparam file="$(find planning)/param/base_local_planner_params.yaml"             command="load" />
        <rosparam file="$(find planning)/param/move_base_params.yaml"                      command="load" />
        
        <!-- Global and local planners -->
        <param name="base_global_planner"       type="string"   value="navfn/NavfnROS" />
        <param name="base_local_planner"                        value="base_local_planner/TrajectoryPlannerROS"/>
        
        <!-- Correcting default value of frames -->
        <param name="global_costmap/robot_base_frame"                   value="$(arg ns)/base_link" />
        <param name="local_costmap/global_frame"                        value="$(arg ns)/odom" />
        <param name="local_costmap/robot_base_frame"                    value="$(arg ns)/base_link" />

        <!-- Parametri non piÃ¹ necessari -->
        <!-- <param name="global_costmap/global_frame"                       value="map" />
        <param name="global_costmap/scan/sensor_frame"                  value="$(arg ns)/front/scan" />
        <param name="global_costmap/obstacle_layer/scan/sensor_frame"   value="$(arg ns)/front/scan" />     
        <param name="local_costmap/scan/sensor_frame"                   value="$(arg ns)/front/scan" />
        <param name="local_costmap/obstacle_layer/scan/sensor_frame"    value="$(arg ns)/front/scan" /> -->

        <!-- Global costmap e AMCL usano il laser principale montato in alto -->
        <rosparam param="global_costmap/obstacles_layer/scan"   subst_value="true">
        {sensor_frame: $(arg ns)/hokuyo_laser_link,
            data_type: LaserScan,
            topic: laser_scan,
            marking: true,
            clearing: true,
            min_obstacle_height: -2.0,
            max_obstacle_height: 2.0,
            obstacle_range: 2.5,
            raytrace_range: 3.0}
        </rosparam>

        <!-- Modificando questi parametri e possibile aggiungere un secondo laser -->
        <rosparam param="local_costmap/obstacles_layer/scan"    subst_value="true">
        {sensor_frame: $(arg ns)/hokuyo_laser_link,
            data_type: LaserScan,
            topic: laser_scan,
            marking: true,
            clearing: true,
            min_obstacle_height: -2.0,
            max_obstacle_height: 2.0,
            obstacle_range: 2.5,
            raytrace_range: 3.0}
        </rosparam>
        
        <!-- Remapping of topics -->
        <remap from="map"       to="/map" />
        <!-- <remap from="odom"      to="odometry/local_filtered" /> -->
        <!-- <remap from="cmd_vel"   to="move_base/cmd_vel"/> -->
    </node>

</launch>