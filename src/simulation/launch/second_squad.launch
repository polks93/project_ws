<launch>
    <!-- Global parameters -->
    <rosparam   file="$(find simulation)/config/shared_info.yaml" command="load" />

    <!-- Map file -->
    <arg name="map_file"        default="$(find mapping)/map/processed_map.yaml" />

    <!-- Launch the map server -->
    <node pkg="map_server" type="map_server" name="map_server" output="screen" args="$(arg map_file)"/>

    <!-- Robot 1 parameters -->
    <arg name="ns_1"              default="robot_1" />
    <arg name="x_1"               default="-12" />
    <arg name="y_1"               default="-2" />
    <arg name="Y_1"               default="0" />

        <!-- Gazebo parameters -->
    <arg name="use_sim_time"    default="true" />
    <arg name="gui"             default="true" />
    <arg name="headless"        default="false" />
    <arg name="debug"           default="false" />
    <arg name="paused"          default="false" />
    <arg name="world_name"      default="$(find simulation)/worlds/dund_miff_obstacles.world" />

    <!-- Launch Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch" >
        <arg name="debug"           value="$(arg debug)" />
        <arg name="gui"             value="$(arg gui)" />
        <arg name="use_sim_time"    value="$(arg use_sim_time)" />
        <arg name="headless"        value="$(arg headless)" />
        <arg name="world_name"      value="$(arg world_name)" />
        <arg name="paused"          value="$(arg paused)" />
    </include>

    <!-- Circles positions -->
    <rosparam   file="$(find simulation)/config/circles.yaml" command="load" param="circles" />

    <!-- Launch the second squad init -->
    <node pkg="my_package" type="second_squad_init.py" name="second_squad_init" output="screen" />

    <!-- Launch Robot 1-->
    <include file="$(find my_robot)/launch/robot_spawner_second_squad.launch" >
        <arg name="ns"              value="$(arg ns_1)" />
        <arg name="x"               value="$(arg x_1)" />
        <arg name="y"               value="$(arg y_1)" />
        <arg name="Y"               value="$(arg Y_1)" />
    </include>

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find simulation)/rviz_config/second_squad_one_robot.rviz"/>

</launch>