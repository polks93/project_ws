<launch>
    <!-- Global parameters -->
    <rosparam   file="$(find simulation)/config/shared_info_second_squad.yaml" command="load" />
    <rosparam   file="$(find simulation)/config/circles.yaml" command="load" param="circles" />

    <!-- Map file -->
    <arg name="map_file"        default="$(find mapping)/map/processed_map.yaml" />

    <!-- Launch the map server -->
    <node pkg="map_server" type="map_server" name="map_server" output="screen" args="$(arg map_file)"/>

    <!-- Robot 1 parameters -->
    <arg name="ns_1"              default="robot_1" />
    <arg name="x_1"               default="-12" />
    <arg name="y_1"               default="-2" />
    <arg name="Y_1"               default="0" />    
    
    <!-- Robot 1 parameters -->
    <arg name="ns_2"              default="robot_2" />
    <arg name="x_2"               default="-12" />
    <arg name="y_2"               default="-4" />
    <arg name="Y_2"               default="0" />

        <!-- Gazebo parameters -->
    <arg name="use_sim_time"    default="true" />
    <arg name="gui"             default="false" />
    <arg name="headless"        default="false" />
    <arg name="debug"           default="false" />
    <arg name="paused"          default="false" />
    <arg name="world_name"      default="$(find simulation)/worlds/dund_miff_obstacles.world" />

    <!-- Launch Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch" >
        <arg name="debug"           value="$(arg debug)" />
        <arg name="gui"             value="$(arg gui)" />
        <arg name="use_sim_time"    value="$(arg use_sim_time)" />
        <arg name="headless"        value="$(arg headless)" />
        <arg name="world_name"      value="$(arg world_name)" />
        <arg name="paused"          value="$(arg paused)" />
    </include>

    <!-- Launch the second squad node manager -->
    <node pkg="my_package" type="central_node.py" name="central_node" output="screen" />


    <!-- Launch the box array pub node -->
    <node pkg="my_package" type="box_array_pub.py" name="box_array_pub" output="screen" />

    <!-- Launch Robot 1-->
    <include file="$(find my_robot)/launch/robot_spawner_second_squad_v1.launch">
        <arg name="ns"              value="$(arg ns_1)" />
        <arg name="x"               value="$(arg x_1)" />
        <arg name="y"               value="$(arg y_1)" />
        <arg name="Y"               value="$(arg Y_1)" />
    </include>

    <!-- Launch Robot 2 -->
    <include file="$(find my_robot)/launch/robot_spawner_second_squad_v1.launch">
        <arg name="ns"              value="$(arg ns_2)" />
        <arg name="x"               value="$(arg x_2)" />
        <arg name="y"               value="$(arg y_2)" />
        <arg name="Y"               value="$(arg Y_2)" />
    </include>

    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find simulation)/rviz_config/second_squad_two_robot.rviz"/>

</launch>